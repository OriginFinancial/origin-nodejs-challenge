{
  "compilerOptions": {
    "noImplicitAny": false,
    "target": "es2016",
    "module": "commonjs",
    "isolatedModules": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "types": ["node", "jest", "express"],
    "typeRoots": ["./node_modules/@types"],
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "include": ["./src"],
  "exclude": ["./node_modules", "./tests"]
}
